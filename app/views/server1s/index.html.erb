    <td><%= server1.protocols %></td>
    <td><%= server1.location %></td>
    <td><%= server1.IP %></td>
    <td><%= server1.server_login %></td>
    <td><%= server1.server_password %></td>
    <td><%= server1.description %></td>
    <!--<td><%= link_to 'Show', server1 %></td>-->
